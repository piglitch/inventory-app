extends layout

block content
  h1 #{title} 
  if artPiece_list.length
    dl(class='flex flex-wrap justify-center gap-2')
      each piece in artPiece_list
        li(class="list-item list-none text-sm")
          a(href=piece.url) #{piece.name} by 
          | #{piece.artist.name} 
          p 
  else
    p There are no pieces. Go to the sidebar to add a book. 