extends layout

block content
  h1 #{title}

  form(method='POST')
    div
      label Name:
      input#name.form-control(type='text', placeholder='Name (Christian Falk)' name='name' required value=(undefined===artist ? '' : artist.name) )
    div
      label(for='date_of_birth') Date of birth:
      input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===artist ? '' : artist.date_of_birth_yyyy_mm_dd) )
      label(for="date_of_death") Date of death:
      input#date_of_death.form-control(type="date" name='date_of_death' value=(undefined===artist ? '' : artist.date_of_death_yyyy_mm_dd))
    button.btn.btn-primary(type='submit') Submit 

  if errors
    ul
      for error in errors
        li!= error.msg