extends layout

block content
  h1= title

  if artist_list.length
    ul(class="artist-list flex flex-wrap justify-center gap-2")
      each artist in artist_list
        li(class="artist-item")
          a(href=artist.url) #{artist.name}
          span(class="artist-dates")
            if artist.date_of_birth && artist.date_of_death
              p (#{artist.date_of_birth_formatted} - #{artist.date_of_death_formatted})
            else if !artist.date_of_birth && !artist.date_of_death 
              p (No data available)  
            else 
              p (#{artist.date_of_birth_formatted} - Present)  
  else
    p There are no artists. Go to the sidebar to add an artist.
