extends layout

block content

  h1 #{genre.name}
  div Art pieces:
    h2(class="heading-text") 
      if genre_artpieces.length
        dl
          each piece in genre_artpieces
            li(class="list-none")
              a(href=piece.url) #{piece.name}
            |#{piece.description}
            p
      else
        p This genre has no artpieces. 
      
    div(class="flex space-x-2")
      p
        a(href=genre.url+'/update')(class="update-button") Update genre
      p
        a(href=genre.url+'/delete')(class="delete-button") Delete genre    