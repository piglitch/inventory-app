extends layout

block content

  h1 #{genre.name}
  div(style='margin-top:20px')
    h2(class="heading-text") Books
    if genre_artpieces.length
      dl
        each piece in genre_artpieces
          li(class="list-none")
            a(href=piece.url) #{piece.name}
          |#{piece.description}
          p
    else
      p This genre has no artpieces. 
  p
    a(href=genre.url+'/delete') Delete genre
  p
    a(href=genre.url+'/update') Update genre   