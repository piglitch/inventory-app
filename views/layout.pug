doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap", rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/style.css')

  body(class="bg-gray-100")
    div(class="animation") 
    div(class="flex md:block h-screen")
      div(class="nav-bar w-1/3 md:w-full md:h-1/4 bg-opacity-80 pr-1 text-yellow-100")
        block sidebar
          ul.sidebar-nav(class="flex flex-col space-y-2 justify-between pl-4 pt-6 md:flex md:flex-row md:justify-center md:space-x-20")
            li
              a(href='/catalog', class='home') Home
            li
              div(id="d1").dropdown1 Artists
                div(id='dc1').dropdown-content1(class="absolute")
                  a(href='/catalog/artists', class="dropdownLinks text-sm") All Artists
                  hr
                  a(href='/catalog/artist/create', class="dropdownLinks text-sm") Create a New Artist
            li
              div(id="d2").dropdown2 Art Pieces
                div(id='dc2').dropdown-content2(class="absolute")
                  a(href='/catalog/artpieces', class="dropdownLinks text-sm") All Art Pieces
                  hr
                  a(href='/catalog/artpiece/create', class="dropdownLinks text-sm") Create a New Art Piece
            li
              div(id="d3").dropdown3 Genres
                div(id='dc3').dropdown-content3(class="absolute")
                  a(href='/catalog/genres', class="dropdownLinks text-sm") All Genres
                  hr
                  a(href='/catalog/genre/create', class="dropdownLinks text-sm") Create a New Genre
            li
              div(id="d4").dropdown4 Sellers
                div(id='dc4').dropdown-content4(class="absolute")
                  a(href='/catalog/sellers', class="dropdownLinks text-sm") All Sellers
                  hr
                  a(href='/catalog/seller/create', class="dropdownLinks text-sm ") Create a New Seller
            li 
              a(href="https://github.com/piglitch", target="_blank", rel="noopener noreferrer")(class='text-pink-400') Github 

      div(class="content w-2/3 p-8 md:p-0 md:w-full md:h-full")
        div(class="mx-auto max-w-lg") 
          block content

  script(src="/javascripts/toggleDropdown.js")
